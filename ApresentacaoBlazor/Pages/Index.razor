@page "/"
@inject IJSRuntime JS

<h1>Hello, world!</h1>

Welcome to your new app.

<input type="text" bind-value-oninput="@Text"/>

@Text

<SurveyPrompt Title="How is Blazor working for you?" />

<Counter CurrentCount="5" LimitReached="@OnLimitReached"></Counter>

@functions {
    public string Text { get; set; }

    async Task OnLimitReached(string e)
    {
        await JS.InvokeAsync<object>("alert", e);
        Console.WriteLine(e);
    }
}