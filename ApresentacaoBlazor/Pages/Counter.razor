@page "/counter"
@page "/counter/{CurrentCount:int}"

<h1>Counter</h1>

<p>Current count: @CurrentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

@functions {
    [Parameter]
    public int CurrentCount { get; set; } = 0;

    void IncrementCount()
    {
        CurrentCount++;
    }
}
